{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["dom", "es6", "dom.iterable"],
    "module": "commonjs",
    "jsx": "react",
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": "./src",
    "allowJs": false,
    "sourceMap": true,
    "removeComments": true,
    "importHelpers": true,
    "importsNotUsedAsValues": "remove",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noEmitOnError": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src", "@types"]
}
